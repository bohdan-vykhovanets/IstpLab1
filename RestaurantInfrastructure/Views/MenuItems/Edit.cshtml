@model RestaurantInfrastructure.Models.MenuItemEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування існуючої позиції</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id"/>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Availability" class="control-label"></label>
                <div>
                    <input type="radio" asp-for="Availability" name="Availability" value="true" id="isAvailableTrue" />
                    <label for="isAvailableTrue">Є в наявності</label>
                </div>
                <div>
                    <input type="radio" asp-for="Availability" name="Availability" value="false" id="isAvailableFalse" />
                    <label for="isAvailableFalse">Немає в наявності</label>
                </div>
                <span asp-validation-for="Availability" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SelectedCategoryIds" class="control-label">Категорії</label>
                <select asp-for="SelectedCategoryIds" class="form-control" multiple="multiple"
                        asp-items="Model.AvailableCategories">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedCousineIds" class="control-label">Кухні</label>
                <select asp-for="SelectedCousineIds" class="form-control" multiple="multiple"
                        asp-items="Model.AvailableCousines">
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" style="margin-top: 5px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary" style="margin-top: 5px; display: inline-flex; align-items: center; gap: 8px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
        </svg>
        Відмінити
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
